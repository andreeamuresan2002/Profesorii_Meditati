@page
@model Profesorii_Meditati.Pages.Profesor.IndexModel

@{
    ViewData["Title"] = "Profesor";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to right, #4CAF50, #2196F3); /* Fundal cu gradient verde-albastru */
        color: white;
    }

    h1 {
        text-align: center;
        margin-top: 50px;
        font-size: 2.5rem;
        font-weight: bold;
    }

    .table {
        width: 100%;
        margin-top: 30px;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
    }

    .table thead {
        background-color: #4CAF50; /* Verde pentru antetul tabelului */
    }

    .table th, .table td {
        padding: 12px;
        text-align: center;
    }

    .table a {
        color: #2196F3; /* Albastru pentru linkuri */
        text-decoration: none;
        font-weight: bold;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .table a:hover {
        background-color: #FFC107; /* Efect hover cu galben */
        color: #000;
    }

    .create-button {
        display: inline-block;
        background-color: #FFC107;
        color: #000;
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 30px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        margin-bottom: 20px;
        text-align: center;
    }

    .create-button:hover {
        background-color: #FFEB3B; /* Efect hover pentru butonul Create New */
    }
</style>

<h1>Profesori</h1>

<p>
    <a class="create-button" asp-page="Create">Create New</a> <!-- Buton stilizat pentru Create New -->
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Profesor[0].Nume)</th>
            <th>@Html.DisplayNameFor(model => model.Profesor[0].Materie)</th>
            <th>@Html.DisplayNameFor(model => model.Profesor[0].ExperientaAni)</th>
            <th>@Html.DisplayNameFor(model => model.Profesor[0].Descriere)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Profesor)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nume)</td>
                <td>@Html.DisplayFor(modelItem => item.Materie)</td>
                <td>@Html.DisplayFor(modelItem => item.ExperientaAni)</td>
                <td>@Html.DisplayFor(modelItem => item.Descriere)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
