@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    body {
        background: linear-gradient(to right, #4CAF50, #2196F3);
        color: white;
        font-family: 'Arial', sans-serif;
    }

    .hero-section {
        text-align: center;
        padding: 80px 20px;
    }

        .hero-section h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero-section p {
            font-size: 1.2rem;
        }

    .cta-button {
        background-color: #FFEB3B;
        color: #000;
        padding: 15px 30px;
        font-size: 1.2rem;
        border-radius: 30px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
        white-space: nowrap; /* Asigură-te că textul nu se va împărți */
    }

        .cta-button:hover {
            background-color: #FFC107;
        }

    .services {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 50px;
        flex-wrap: wrap;
    }

    .service-card {
        background-color: rgba(255, 255, 255, 0.2);
        padding: 20px;
        border-radius: 10px;
        text-align: center;
        width: 250px;
        transition: 0.3s;
    }

        .service-card:hover {
            background-color: rgba(255, 255, 255, 0.4);
        }

        .service-card h3 {
            margin-bottom: 10px;
        }
</style>

<div class="hero-section">
    <h1>Bine ai venit la Meditații!</h1>
    <p>Îmbunătățește-ți cunoștințele cu cei mai buni profesori de meditații.</p>
    <a href="/Meditatie/Index" class="cta-button">Vezi Meditațiile</a>
</div>

<div class="services">
    <div class="service-card">
        <h3>Meditații Online</h3>
        <p>Accesează cursuri personalizate pentru orice materie.</p>
        <a href="/Meditatie/Index" class="cta-button">Vezi detalii</a>
    </div>
    <div class="service-card">
        <h3>Profesori Calificați</h3>
        <p>Învață de la cei mai experimentați specialiști.</p>
        <a href="/Profesor/Index" class="cta-button">Vezi Profesori</a>
    </div>
    <div class="service-card">
        <h3>Programare Ușoară</h3>
        <p>Rezervă o sesiune rapid și eficient.</p>
        <a href="/Programare/Index" class="cta-button">Programează acum</a> <!-- Textul din buton este acum mai scurt -->
    </div>
</div>
